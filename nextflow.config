        shifter.enabled         = false
        charliecloud.enabled    = false

        process {
        container = "${projectDir}/spotlight.sif"
        runOptions = "--pwd \$PWD --no-home --cleanenv -c --bind ${projectDir}:/mnt"
        }

        // apptainer.runOptions="--no-home --bind ${projectDir}:/tmp"
